generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// MODELOS DE AUTENTICAÇÃO (NextAuth)
// ============================================

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  password      String
  hash          String          @unique  // Hash único de 10 caracteres (nanoid)
  image         String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  // Relações
  accounts         Account[]
  sessions         Session[]
  disciplinas      Disciplina[]
  materiaisEstudo  MaterialEstudo[]
  planosEstudo     PlanoEstudo[]

  @@index([hash])
  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// MODELOS DE DOMÍNIO
// ============================================

model Disciplina {
  id            String               @id @default(cuid())
  userId        String
  nome          String
  descricao     String?
  cargaHoraria  Int                  @default(0)
  peso          Float                @default(1.0)
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  user          User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  materiais     DisciplinaMaterial[]
  semanasEstudo DisciplinaSemana[]

  @@index([userId])
  @@index([nome])
}

model MaterialEstudo {
  id                String               @id @default(cuid())
  userId            String
  nome              String
  tipo              String               @default("PDF")  // PDF ou VIDEO
  totalPaginas      Int
  paginasLidas      Int                  @default(0)
  duracaoSegundos   Int?                 // Duração do vídeo em segundos (para vídeos)
  tempoAssistido    Int?                 @default(0) // Tempo assistido em segundos (para vídeos)
  arquivoPdfUrl     String?              // Opcional - PDFs armazenados no IndexedDB
  arquivoVideoUrl   String?              // Opcional - Vídeos armazenados no IndexedDB
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  user              User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  anotacoes         Anotacao[]
  disciplinas       DisciplinaMaterial[]
  historicoLeitura  HistoricoLeitura[]

  @@index([userId])
  @@index([tipo])
}

model DisciplinaMaterial {
  id           String         @id @default(cuid())
  disciplinaId String
  materialId   String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  disciplina   Disciplina     @relation(fields: [disciplinaId], references: [id])
  material     MaterialEstudo @relation(fields: [materialId], references: [id])

  @@unique([disciplinaId, materialId])
}

model HistoricoLeitura {
  id                   String         @id @default(cuid())
  materialId           String
  paginaAtual          Int
  tempoLeituraSegundos Int
  dataLeitura          DateTime       @default(now())
  createdAt            DateTime       @default(now())
  assuntosEstudados    String?
  nomeSessao           String?
  material             MaterialEstudo @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@index([materialId])
  @@index([dataLeitura])
  @@index([paginaAtual])
}

model Anotacao {
  id         String         @id @default(cuid())
  materialId String
  pagina     Int
  texto      String
  posicaoX   Float?
  posicaoY   Float?
  largura    Float?
  altura     Float?
  cor        String?        @default("#ffff00")
  tipo       String         @default("highlight")
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  material   MaterialEstudo @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@index([materialId])
  @@index([pagina])
  @@index([tipo])
  @@index([createdAt])
}

model PlanoEstudo {
  id         String         @id @default(cuid())
  userId     String
  nome       String
  descricao  String?
  dataInicio DateTime
  dataFim    DateTime
  ativo      Boolean        @default(true)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  semanas    SemanaEstudo[]

  @@index([userId])
  @@index([ativo])
  @@index([dataInicio])
  @@index([dataFim])
}

model SemanaEstudo {
  id              String             @id @default(cuid())
  planoId         String
  numeroSemana    Int
  dataInicio      DateTime
  dataFim         DateTime
  observacoes     String?
  totalHoras      Int                @default(0)
  horasRealizadas Int                @default(0)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  disciplinas     DisciplinaSemana[]
  plano           PlanoEstudo        @relation(fields: [planoId], references: [id], onDelete: Cascade)

  @@unique([planoId, numeroSemana])
  @@index([planoId])
  @@index([numeroSemana])
  @@index([dataInicio])
}

model DisciplinaSemana {
  id                  String       @id @default(cuid())
  semanaId            String
  disciplinaId        String
  horasPlanejadas     Int
  horasRealizadas     Int          @default(0)
  prioridade          Int          @default(1)
  observacoes         String?
  concluida           Boolean      @default(false)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  materialNome        String?
  materialUrl         String?
  paginasLidas        Int          @default(0)
  questoesPlanejadas  Int          @default(0)
  questoesRealizadas  Int          @default(0)
  tempoVideoPlanejado Int          @default(0)
  tempoVideoRealizado Int          @default(0)
  tipoVeiculo         String?
  totalPaginas        Int          @default(0)
  diasEstudo          String?
  disciplina          Disciplina   @relation(fields: [disciplinaId], references: [id], onDelete: Cascade)
  semana              SemanaEstudo @relation(fields: [semanaId], references: [id], onDelete: Cascade)

  @@unique([semanaId, disciplinaId])
  @@index([semanaId])
  @@index([disciplinaId])
  @@index([prioridade])
}
