generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Disciplina {
  id            String               @id @default(cuid())
  nome          String
  descricao     String?
  cargaHoraria  Int                  @default(0)
  peso          Float                @default(1.0)
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  materiais     DisciplinaMaterial[]
  semanasEstudo DisciplinaSemana[]
}

model MaterialEstudo {
  id               String               @id @default(cuid())
  nome             String
  totalPaginas     Int
  paginasLidas     Int                  @default(0)
  arquivoPdfUrl    String?              // Opcional - PDFs armazenados apenas no IndexedDB
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  anotacoes        Anotacao[]
  disciplinas      DisciplinaMaterial[]
  historicoLeitura HistoricoLeitura[]
}

model DisciplinaMaterial {
  id           String         @id @default(cuid())
  disciplinaId String
  materialId   String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  disciplina   Disciplina     @relation(fields: [disciplinaId], references: [id])
  material     MaterialEstudo @relation(fields: [materialId], references: [id])

  @@unique([disciplinaId, materialId])
}

model HistoricoLeitura {
  id                   String         @id @default(cuid())
  materialId           String
  paginaAtual          Int
  tempoLeituraSegundos Int
  dataLeitura          DateTime       @default(now())
  createdAt            DateTime       @default(now())
  assuntosEstudados    String?
  nomeSessao           String?
  material             MaterialEstudo @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@index([materialId])
  @@index([dataLeitura])
  @@index([paginaAtual])
}

model Anotacao {
  id         String         @id @default(cuid())
  materialId String
  pagina     Int
  texto      String
  posicaoX   Float?
  posicaoY   Float?
  largura    Float?
  altura     Float?
  cor        String?        @default("#ffff00")
  tipo       String         @default("highlight")
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  material   MaterialEstudo @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@index([materialId])
  @@index([pagina])
  @@index([tipo])
  @@index([createdAt])
}

model PlanoEstudo {
  id         String         @id @default(cuid())
  nome       String
  descricao  String?
  dataInicio DateTime
  dataFim    DateTime
  ativo      Boolean        @default(true)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  semanas    SemanaEstudo[]

  @@index([ativo])
  @@index([dataInicio])
  @@index([dataFim])
}

model SemanaEstudo {
  id              String             @id @default(cuid())
  planoId         String
  numeroSemana    Int
  dataInicio      DateTime
  dataFim         DateTime
  observacoes     String?
  totalHoras      Int                @default(0)
  horasRealizadas Int                @default(0)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  disciplinas     DisciplinaSemana[]
  plano           PlanoEstudo        @relation(fields: [planoId], references: [id], onDelete: Cascade)

  @@unique([planoId, numeroSemana])
  @@index([planoId])
  @@index([numeroSemana])
  @@index([dataInicio])
}

model DisciplinaSemana {
  id                  String       @id @default(cuid())
  semanaId            String
  disciplinaId        String
  horasPlanejadas     Int
  horasRealizadas     Int          @default(0)
  prioridade          Int          @default(1)
  observacoes         String?
  concluida           Boolean      @default(false)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  materialNome        String?
  materialUrl         String?
  paginasLidas        Int          @default(0)
  questoesPlanejadas  Int          @default(0)
  questoesRealizadas  Int          @default(0)
  tempoVideoPlanejado Int          @default(0)
  tempoVideoRealizado Int          @default(0)
  tipoVeiculo         String?
  totalPaginas        Int          @default(0)
  diasEstudo          String?
  disciplina          Disciplina   @relation(fields: [disciplinaId], references: [id], onDelete: Cascade)
  semana              SemanaEstudo @relation(fields: [semanaId], references: [id], onDelete: Cascade)

  @@unique([semanaId, disciplinaId])
  @@index([semanaId])
  @@index([disciplinaId])
  @@index([prioridade])
}
